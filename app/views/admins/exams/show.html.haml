= provide(:title, 'Girls')
= provide(:page_title, 'Girls')
= provide(:page_icon, 'active-page-icon large-gray-icon dress_blk')

- content_for :pageheader do
  %ul.breadcrumb
    %li
      = link_to admins_dashboard_path do
        %i.icon-home
        =t(:dashboard)
      %span.divider /
    %li
      = link_to admins_girl_path(exam.girl) do
        %i.icon-home
        =t(:girl)
      %span.divider /
    %li.active
      %i.icon-official
      =t(:exam)
  %h1#main-heading
    %span= exam.girl.full_name.titleize

.mws-panel.grid_4
  .mws-panel-header
    = link_to 'Edit', edit_admins_exam_path(exam), :class => 'btn btn-info pull-right'
    %span
      %i.icon-book
      Test for
      = exam.girl.full_name.titleize
  .mws-panel-body.no-padding
    %ul.mws-summary.clearfix
      %li
        %span.key
          date_perform
        %span.val
          %span.text-nowrap= exam.date_perform
