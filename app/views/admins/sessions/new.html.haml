-#%h1 Sign in
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, :required => false, :autofocus => true
      = f.input :password, :required => false
      = #f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    .form-inputs{:style => 'padding-bottom:10px;text-align:center;'}= link_to "Forgot your password?", new_password_path(resource_name)
    .form-actions
      = f.button :submit, "Sign in", :class => 'btn btn-success btn-block btn-large'
  = #render "devise/shared/links"
.login-wrapper
  .tab-content
    #frm-login.tab-pane.active
      %h2.login-h Login Form
      -#.error-bubble
        Invalid Login
      -#.success-bubble
        Login Successfully
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        .form-inputs
          = f.input :email, :required => false, :autofocus => true, :class => 'input-login', :placeholder => "Email", :label => false
          = f.input :password, :required => false, :class => 'input-password', :placeholder => "Password", :label => false
          = #f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
          = f.button :submit, "Login", :class => 'btn btn-large btn-block btn-extend btn-login'
        .form-inputs{:style => 'padding-bottom:10px;text-align:center;'}= link_to "Forgot your password?", new_password_path(resource_name)


