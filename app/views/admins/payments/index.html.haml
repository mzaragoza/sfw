= provide(:title, 'Payments')
= provide(:page_title, 'Payments')
= provide(:page_icon, 'active-page-icon large-gray-icon price_tags_blk')

- content_for :pageheader do
  %ul.breadcrumb
    %li
      = link_to admins_dashboard_path do
        %i.icon-home
        =t(:dashboard)
      %span.divider /
    %li.active
      %i.icon-official
      =t(:payments)
  %h1#main-heading
    all payments
    %span History of payments

.container-fluid
  .row-fluid
    .span12
      .box-widget
        .widget-head.clearfix
          %span.h-icon
            %i.ledcolor-icons.money_dollar_co
          %h4 Payments
          =link_to t(:add_payment), new_admins_payment_path, :class => 'btn btn-info pull-right'
        .widget-container
          %table.data-tbl-boxy.table.table-striped.table-well.responsive
            %thead
              %tr
                %th=t(:girl_name)
                %th=t(:amount)
                %th=t(:payment_type)
                %th=t(:payment_date)
                %th=t(:note)
                %th
            %tbody
              - payments.each do |p|
                %tr
                  %td= p.girl.full_name.titleize
                  %td= p.amount
                  %td= p.payment_type
                  %td= p.payment_date
                  %td= p.note
                  %td
                    = link_to edit_admins_payment_path(p), :class => 'btn btn-small btn-info' do
                      edit

