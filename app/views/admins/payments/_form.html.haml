= simple_form_for([:admins, payment], :html => {:class => 'form-horizontal' }) do |f|
  - if params[:format]
    = f.input :girl_id, :as => :hidden, :input_html => {:value => girl.id }
  -else 
    = f.input :girl_id, :as => :hidden, :input_html => {:value => payment.girl.id }
  .mws-form-row
    %label.mws-form-label= t(:amount)
    .mws-form-item
    = f.input :amount, :label => false
  .mws-form-row
    %label.mws-form-label= t(:payment_date)
    .mws-form-item
    = f.input :payment_date, :input_html => {:id => 'dp1', :class => 'datepicker'}, :label => false
  .mws-form-row
    %label.mws-form-label= t(:payment_type)
    .mws-form-item
    = f.input :payment_type, :collection => payment_type_list,  :as => :select, :error => false, include_blank: false , :label => false
  .mws-form-row
    %label.mws-form-label= t(:payment_method)
    .mws-form-item
    = f.input :payment_method, :collection => payment_method_list,  :as => :select, :error => false, include_blank: false, :label => false
  .mws-form-row
    %label.mws-form-label= t(:payment_number)
    .mws-form-item
    = f.input :payment_number, :label => false
  .mws-form-row
    %label.mws-form-label= t(:note)
    .mws-form-item
    = f.input :note, :label => false
  .mws-form-row
    .mws-form-item
    = f.button :submit, :class => 'pull-right btn btn-info'
