-url = request.url
- unless url.include? 'staging'
  .mws-panel.grid_4
    .mws-panel-header
      %span
        %i.icon-chart
        Income Expenses
    .mws-panel-body
      .mws-panel-content
        = render 'shared/income_expense_bar_chart'
.mws-panel.grid_4
  .mws-panel-body.no-padding
    %fieldset.mws-form-inline
      .mws-form-row.bordered
        .mws-panel.grid_8
          .mws-panel-header
            %span
              %i.icon-table
              Active Girls in the Systems
          .mws-panel-body.no-padding
            %table.mws-table
              %thead
                %tr
                  %th= t(:name)
                  %th= t(:last_payment_date)
                  %th= t(:arrival_date)
                  %th= t(:proprty)
                  %th= t(:photo)
                  %th= t(:license_front)
                  %th= t(:license_back)
                  %th= t(:insurance_card_front)
                  %th= t(:insurance_card_back)
              %tbody
                - girls.where(:active => true).each do |g|
                  %tr
                    %td= link_to g.full_name.titleize, admins_girl_path(g)
                    %td= g.payments.order("id DESC").first.payment_date  if g.payments != []
                    %td
                      = g.property.name.titleize if g.property
                    %td
                      - if g.photo?
                        Yes
                      - else
                        No
                    %td
                      - if g.license_front?
                        Yes
                      - else
                        No
                    %td
                      - if g.license_back?
                        Yes
                      - else
                        No
                    %td
                      - if g.insurance_card_front?
                        Yes
                      - else
                        No
                    %td
                      - if g.insurance_card_back?
                        Yes
                      - else
                        No
                    %td
                      - if .photo?
                        Yes
                      - else
                        No
.mws-panel.grid_4
  .mws-panel-header
    %span
      %i.icon-chart
      Income Expenses
  .mws-panel-body
    .mws-panel-content
      = render 'shared/income_expense_chart'
