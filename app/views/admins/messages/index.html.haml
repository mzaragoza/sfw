= provide(:title, 'Girls')
= provide(:page_title, 'Girls')
= provide(:page_icon, 'active-page-icon large-gray-icon dress_blk')

- content_for :pageheader do
  %ul.breadcrumb
    %li
      = link_to admins_dashboard_path do
        %i.icon-home
        =t(:dashboard)
      %span.divider /
    %li.active
      %i.icon-official
      =t(:messagess)
  %h1#main-heading
    Histoy Of Messages

=link_to t(:send_house_message), new_admins_message_path, :class => 'btn btn-info pull-right'
.mws-panel.grid_8.mws-collapsible
  .mws-panel-header
    %span
      %i.icon-table
      Messages
  .mws-panel-body.no-padding
    %table.mws-datatable-fn.mws-table
      %thead
        %tr
          %th=t(:send_by)
          %th=t(:message)
          %th=t(:dste)
      %tbody
        - messages.each do |m|
          %tr
            %td= m.admin.full_name.titleize if m.admin
            %td= m.message
            %td= m.created_at.in_time_zone('Eastern Time (US & Canada)').strftime('%D %I:%M %p')

