- content_for :pageheader do
  %ul.breadcrumb
    %li
      %a{:href => "/admins/dashboard"}
        %i.icon-home
        =t(:dashboard)
      %span.divider /
    %li.active
      %i.icon-edit
      =t(:edit_profile)
  %h1#main-heading
    =t(:update_your_profile)
= simple_form_for(admin, :url => admins_profile_path(admin), :html => {:class => 'form-horizontal' }) do |f|
  .mws-form-inline
    .mws-form-row
      %label.mws-form-label= t(:first_name)
      .mws-form-item
        = f.input :first_name, :label => false
    .mws-form-row
      %label.mws-form-label= t(:last_name)
      .mws-form-item
        = f.input :last_name, :label => false
    .mws-form-row
      %label.mws-form-label= t(:email)
      .mws-form-item
        = f.input :email, :label => false
    .mws-form-row
      %label.mws-form-label= t(:photo)
      .mws-form-item
        = f.input :photo, :label => false
    .mws-form-row
      %label.mws-form-label= t(:password)
      .mws-form-item
        = f.input :password, :label => false
    .mws-form-row
      %label.mws-form-label= t(:password_confirmation)
      .mws-form-item
        = f.input :password_confirmation, :label => false
    .mws-form-row
      .mws-form-item
        = f.button :submit, :class => 'pull-right btn btn-info'
