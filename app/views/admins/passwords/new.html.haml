%h1 Forgot password?
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => false
  -#.form-inputs{:style => 'padding-bottom:10px;text-align:center;'}= link_to "Sign in", new_session_path(resource_name)␣
  .clear
  .form-actions
    = f.button :submit, "Reset password",:class => 'btn btn-success btn-block btn-large'
= #render "devise/shared/links"
