= provide(:title, 'Girls')
= provide(:page_title, 'Girls')
= provide(:page_icon, 'active-page-icon large-gray-icon dress_blk')

- content_for :pageheader do
  %ul.breadcrumb
    %li
      = link_to admins_dashboard_path do
        %i.icon-home
        =t(:dashboard)
      %span.divider /
    %li
      = link_to admins_girl_path(proof.girl) do
        %i.icon-home
        =t(:girl)
      %span.divider /
    %li.active
      %i.icon-official
      =t(:exam)
  %h1#main-heading
    %span= proof.girl.full_name.titleize

.mws-panel.grid_4
  .mws-panel-header
    =# link_to 'Edit', edit_admins_proof_path(proof), :class => 'btn btn-info pull-right'
    %span
      %i.icon-book
      Test for
      = proof.girl.full_name.titleize
  .mws-panel-body.no-padding
    %ul.mws-summary.clearfix
      %li
        %span.key
          date_perform
        %span.val
          %span.text-nowrap= proof.date_perform
      %li
        %span.key
          drug_test_results_on_site
        %span.val
          %span.text-nowrap= proof.drug_test_results_on_site
      %li
        %span.key
          drug_test_results_lab
        %span.val
          %span.text-nowrap= proof.drug_test_results_lab
      %li
        %span.key
          insurance_billed_amount
        %span.val
          %span.text-nowrap= proof.insurance_billed_amount
      %li
        %span.key
          insurance_billed_date
        %span.val
          %span.text-nowrap= proof.insurance_billed_date
      %li
        %span.key
          amount_paid
        %span.val
          %span.text-nowrap= proof.amount_paid2
      %li
        %span.key
          date_paid
        %span.val
          %span.text-nowrap= proof.date_paid
      %li
        %span.key
          insurance_company
        %span.val
          %span.text-nowrap= proof.insurance_company
      %li
        %span.key
          exam_pdf
        %span.val
          %span.text-nowrap= link_to t(:pdf), proof.exam_pdf_url, :class => 'btn btn-info' if proof.exam_pdf?
      - proof.drugs.each do |p|
        %li 
          %span.key
            =p.code
          %span.val
            %span.text-nowrap
              =  p.abbreviation
              =  p.result
              =  p.unit
              =  p.normal
              =  p.comment
