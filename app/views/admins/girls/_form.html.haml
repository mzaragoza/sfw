= image_tag girl.photo, :class => 'img-polaroid' unless girl.photo.blank?
= simple_form_for([:admins, girl], :html => {:class => 'form-horizontal' }) do |f|
  = f.input :first_name
  = f.input :middle_name
  = f.input :last_name
  = f.input :arrival_date, :input_html => {:id => 'dp1'}
  = f.input :departure_date, :input_html => {:id => 'dp2'}
  = f.input :social_security
  = f.input :dob
  = f.input :address
  = f.input :address2
  = f.input :city
  = f.input :state, :as => :select, :collection => us_states
  = f.input :zip
  = f.input :drivers_license
  = f.input :phone
  = f.input :email
  = f.input :is_taking_medication
  = f.input :list_dosage
  = f.input :clean_date, :input_html => {:id => 'dp3'}
  = f.input :drugs_of_choice
  = f.input :emergency_contact1_first_name
  = f.input :emergency_contact1_last_name
  = f.input :emergency_contact1_phone
  = f.input :emergency_contact1_relation
  = f.input :emergency_contact2_first_name
  = f.input :emergency_contact2_last_name
  = f.input :emergency_contact2_phone
  = f.input :emergency_contact2_relation
  = f.input :insurance_provider
  = f.input :insurance_provider_phone_number
  = f.input :group_code
  = f.input :policy_number
  = f.input :clean_urine_upon_arriva
  = f.input :referral_source
  = f.input :referral_phone_number
  = f.input :sponsor_first_name
  = f.input :sponsor_last_name
  = f.input :sponsor_phone
  = f.input :photo
  = f.input :active
  = f.button :submit, :class => 'pull-right btn btn-info'

